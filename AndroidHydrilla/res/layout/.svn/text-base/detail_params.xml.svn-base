<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <LinearLayout
        android:id="@+id/param_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/classify"
            android:text="@string/tsmt_params" />

        <ListView
            android:id="@+id/tsmt_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
             android:divider="#C0C0C0"
            android:dividerHeight="1px"
             android:choiceMode="none"
            android:scrollbarAlwaysDrawVerticalTrack="false" 
            >
        </ListView>

        <TextView
            style="@style/classify"
            android:text="@string/sensor_params_0" />

        <ListView
            android:id="@+id/sensor_listview_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#C0C0C0"
            android:dividerHeight="1px"
            android:choiceMode="none"
            android:scrollbarAlwaysDrawVerticalTrack="false" >
        </ListView>

        <TextView
            style="@style/classify"
            android:text="@string/sensor_params_1" />

        <ListView
            android:id="@+id/sensor_listview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
             android:divider="#C0C0C0"
            android:dividerHeight="1px"
            
             android:choiceMode="none"
            android:scrollbarAlwaysDrawVerticalTrack="false" 
            >
        </ListView>
    </LinearLayout>

</ScrollView>