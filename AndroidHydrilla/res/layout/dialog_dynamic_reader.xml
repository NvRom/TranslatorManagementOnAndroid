<?xml version="1.0" encoding="utf-8"?>
<!-- 动态 读取模拟量的 dialog -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
    
    <EditText
        android:id="@+id/dynamic_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:digits="0123456789.-"
       	android:inputType="numberDecimal"
         />
    <!-- 读取按钮  暂停按钮-->
     <ToggleButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/dynamic_edit_text"
          android:textOn="@string/dema_read_start"
          android:textOff="@string/dema_read_stop"
          android:id="@+id/dema_read_button"
         />
     <!-- 清除按钮 -->
     <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/dema_read_button"
          android:text="@string/dema_read_clear"
          android:id="@+id/dema_clear_button"
         />
     

    
    

</RelativeLayout>
